#!/usr/bin/make -f
# -*- makefile -*-

export DH_OPTIONS

CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp


build: build-stamp
build-stamp: configure-stamp 
	$(MAKE) -C src/
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	$(MAKE) clean -C src/

	dh_clean

install: 
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs 

	dh_install src/locked.org.xpm usr/share/medusa-client
	dh_install src/locked.xpm usr/share/medusa-client
	dh_install src/logo.xpm usr/share/medusa-client
	dh_install src/medusa.conf etc
	dh_install src/mdclient sbin
	dh_install src/98medusa_load-xhost etc/X11/Xsession.d
	dh_install src/Default usr/share/medusa-client
	dh_install guadalinfo-notify-send usr/sbin
	dh_install guadalinfo-kill-sessions usr/sbin

#	dh_install bin/mdserver sbin
#	dh_install src/mdserver_es.qm usr/share/qt3/translations
#	dh_install medusarc etc/qt3
#	dh_install web_earth.png usr/share/pixmaps

	dh_install

binary-common:
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installman
	dh_link
	dh_strip
	dh_compress 
	dh_fixperms
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-arch:

binary-indep:

binary: build install
	$(MAKE) -f debian/rules DH_OPTIONS=-a binary-common

.PHONY: build clean binary install configure
